@model IEnumerable<MVCProject_IvanaKasalo.Models.Kupac>

@{

    ViewBag.Title = "Index";
}

<h2>Kupci</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(modelItem => item.IDKupac)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @id = item.IDKupac }, new { @class = "btn btn-info" })

                @Html.ActionLink("Računi", "Index", "Racun", new { @id = item.IDKupac }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { @id = item.IDKupac }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
