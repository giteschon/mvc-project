@model IEnumerable<MVCProject_IvanaKasalo.Models.Racun>

@{
    ViewBag.Title = "Index";
}

<h2>Računi</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatumIzdavanja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojRacuna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Komercijalist)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Broj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tip)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(modelItem => item.IDRacun)
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.DatumIzdavanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojRacuna)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Komercijalist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Broj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tip)
            </td>
            <td>

                @Html.ActionLink("Detalji", "Details", new { @id = item.IDRacun }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { @id = item.IDRacun }, new { @class = "btn btn-primary" })

            </td>
        </tr>
    }

</table>
